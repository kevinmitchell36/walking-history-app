

<h1> <%= @current_user.level %> </h1>


<a href="/events/calculated?category_id=<%= @event.category.id %>">Find another location</a>

    <!-- PROFILE SECTION START: Events Section -->
    <section id="profile" class="section">
        <div class="container section-wrapper">
            <div class="section-content">
                <div class="row">          
                    <div class="col-md-7 match-height">

                        <!-- PROFILE TEXT START -->
                    
                        
                        <div class="profile-text padding-right-yes">
                            <div class="row">
                                <div class="col-md-12">
                                    <h2 class="section-title"><%= @location.current_name %></h2><a href="/events/visited?location_id=<%= @event.location.id %>&event_id=<%= @event.id %>"">Check In</a>

                                <% if @location_user.visited == true %>

                                    <% if current_user.level > 0 %>
                                    <p> <%= @event.description_level_1 %> </p>

                                    <span class="divider"></span> 
                                    <% elsif current_user.level >= 2 %> 
                                    <p class="text-grey">
                                        <%= @event.description_level_2 %>
                                    </p>

                                    <span class="divider"></span>
                                    <% else %>
                                    <p class="text-grey">
                                        <%= @event.description_level_3 %>
                                    </p>
                                    <% end %>
                                <% end %>
                                </div>
                                <!-- //.col-md-12 -->
                            </div>
                            <!-- //.row -->
                        </div>
                  <!-- //PROFILE TEXT END -->
                    
                     <!-- CONTACT DETAILS START -->
                        <div class="contact-details padding-right-yes">
                            <div class="row">
                                <div class="col-sm-6 col-md-5">
                                    <h4>Event Details</h4>

                                    <ul class="list-unstyled text-grey">
                                        <li>When: <%= @event.year %></li>
                                        <li>Date: <%= @event.date %></li>
                                        <li>Time: <%= @event.time_of_day %></li>
                                    </ul>
                                </div>
                                <!-- //.col-md-5 -->

                                <div class="col-sm-6 col-md-7">
                                    <a href="/events/calculated?category_id=<%= @event.category.id %>"" class="btn btn-lg btn-custom">Find another location
                                    </a>
                                </div>
                                <!-- //.col-md-6 -->
                            </div>
                            <!-- //.row -->
                        </div>
                        <!-- //CONTACT DETAILS END -->    

                    <!-- PROFILE PICTURE START -->
                    <div class="col-md-5 hidden-xs hidden-sm match-height pp-wrapper">
                        <div class="profile-picture style-one">
                            <img src="/assets/images/profile-picture-1.jpg" alt="profile picture" class="img-responsive"/>
                        </div>
                    </div>
                    <!-- //PROFILE PICTURE END -->
                </div>
                <!-- //.row -->
            </div>
            <!-- //.section-content -->
        </div>
        <!-- //.container -->
    </section>
    <!-- //PROFILE SECTION END -->
    

